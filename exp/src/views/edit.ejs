<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contancto</title>
    <%- include('partials/head') %>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

</head>

<body class="bg-secondary">
    <%- include('partials/nav') %>
        <main>
            <div id="titulo-contacto">
                <h2>Editar Pedido</h2>
            </div>
        </main>
        <% if (user){ %>
            <div class="container d-flex justify-content-center">
                <form action="/update" method="POST">
                    <input id="id" name="id" value="<%= user.id_pedido %>" readonly>
                    <div class="mb-3">
                        <label for="user" class="form-label">Nombre</label >
                        <input type="text" class="form-control" id="user" name="user" value="<%= user.nombre %>" readonly>
                    </div>
                    <label for="user" class="form-input">Email</label>
                    <input type="email" class="form-input" name="email" id="email" placeholder="Email"
                        value="<%= user.correo%>" readonly>
                    <label for="user">Telefono</label>
                    <input type="number" name="telefono" id="telefono" value="<%= user.telefono %>" max="999999999"
                        class="form-input" placeholder="Numero Telefonico" required>
                    <div class="mb-3">
                        <label for="user" class="form-label">Producto</label>
                        <select name="product" id="product" class="form-select">
                            <option <%=user.id_producto=='1' ? "selected" : "" %> name="producto" value="1">Creacion de
                                pagina web</option>
                            <option <%=user.id_producto=='2' ? "selected" : "" %> name="producto" value="2">Mantencion
                                de pagina y actualizacion</option>
                            <option <%=user.id_producto=='3' ? "selected" : "" %> name="producto" value="3">Verificacion
                                de de seguridad de paginas</option>
                        </select>
                        <label for="user">Comentario</label>
                        <textarea id="mensaje" rows="4" name="mensaje" placeholder="Comentario" maxlength="300"
                            required><%= user.comentario %></textarea>
                    </div>
                    <button type="submit" class="btnC btn btn-success" tabindex="5">Guardar</button>
                    <a href="/contacto" class="btnC btn btn-danger">Cancelar</a>
                </form>
            </div>
            <%} %>

                <%- include('partials/footer') %>
                    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
                        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
                        crossorigin="anonymous"></script>
</body>

</html>